<script type="text/javascript">
  
  function addFeedbackClickHandler(cellId, checkId, pId, iconId) {
    document.getElementById(cellId).onclick = function() {
      activateSaveButton();
      
      var checkbox = document.getElementById(checkId);
      checkbox.checked = !checkbox.checked;
      
      var iconClass = checkbox.checked ? 'eui-icon eui-check-o' : 'fa fa-comments';
      $("#" + iconId).attr('class', iconClass);
      $("#" + cellId).toggleClass('review-toggle__cell');
      $("#" + pId).toggleClass('review-toggle__text'); 
    }; 
  }

</script>

<tr class="user_input">

  <th class="headcol headcol__user-row second_to_final_headcol">Feedback</th>
  
  <% section_titles.each do |title| %>
    <td class="no_padding column_<%=title%>">
      <div id="feedback_cell_<%= title %>" class="opinion_cell">
        <input style="visibility: hidden;" type="checkbox" id="feedback_check_<%= title %>" name="feedback[<%= title %>]" form="field_form">
        <p id="feedback_text_<%= title %>">
          <i id="feedback_icon_<%= title %>" class="fa fa-comments"></i>
          Request Curator Feedback
        </p>
      </div>  
    </td>

    <script type="text/javascript">
      addFeedbackClickHandler("feedback_cell_<%= title %>", "feedback_check_<%= title %>", "feedback_text_<%= title %>", "feedback_icon_<%= title %>");
      
      <% if feedbacks[title] %>
        $("#feedback_check_<%= title %>").attr('checked', true);
        $("#feedback_cell_<%= title %>").addClass('review-toggle__cell');
        $("#feedback_text_<%= title %>").addClass('review-toggle__text');
        $("#feedback_icon_<%= title %>").attr('class', "eui-icon eui-check-o");
      <% end %>
    </script>
  <% end %>

</tr>

