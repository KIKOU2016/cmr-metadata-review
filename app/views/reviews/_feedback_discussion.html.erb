<tr class="user_input">

  <th class="headcol headcol__user-row">
    <p>Feedback Discussion</p>
  </th>

  <% section_titles.each do |title| %>
    <td class="discussion_td column_<%=title%>">
      <div class="discussion_holder">
        <div class="new_discussion">
          <!-- <input type='hidden' name='discussion[<%= title %>][category]' value='<%= DiscussionCategory::FEEDBACK %>' form="field_form"> -->
          <textarea oninput="activateSaveButton()" placeholder="New Comment..." name="discussion[<%= title %>][comment]" form="field_form"></textarea>  
        </div>

        <% messages = discussions.select { |discussion| discussion.column_name == title }.sort { |old_comment, new_comment| new_comment.date <=> old_comment.date } %>
        <% messages.each do |message| %>
          <div class="discussion_comment">
            <div class="discussion_title">
              <p><%= message.formatted_date %></p>
              <p><%= message.user.email %> says:</p>
            </div>
            <div class="discussion_text">
              <p><%= string_html_format(message.comment) %></p>
            </div>
          </div>
        <% end %>
      </div>  
    </td>
  <% end %>

</tr>