        <tr>
          <!-- for each of shown value list, create td for value -->
          <% @section_titles.each do |title| %>
            <td style="width:500px;"><%= title %></td>
          <% end %>
        </tr>
        <tr>
          <!-- for each of shown value list, create td for value -->
          <% @section_titles.each do |title| %>
            <td style="width:500px;"><%= @flagged_by_script[title] %></td>
          <% end %>
        </tr>
        <tr>
          <% @section_titles.each do |title| %>
            <td><div><%= @script_values[title] %></div></td>
          <% end %>
