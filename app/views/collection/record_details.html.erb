<h2>Review Details for Collection Record</h2>
<h3>Concept ID: <%= @concept_id %></h3>
<h3>Short Name: <%= @collection_records.first.short_name %></h3>

<% @collection_records.each do |record| %>

<table cellpadding="5" border="1">

  <tr>
    <th>
      <h4>Revision ID: <%= record.version_id %></h4>
    </th>
  </tr>

  <tr>
    <td>
      <p>Reviews:</p>
          <table cellpadding="5" border="1">
              <tr>
                  <td>Reviewer</td>
                  <td>Status</td>
                  <td>Completion Date</td>
              </tr>


            <% record.collection_reviews.each do |review| %>
              <tr>
                  <td><%= review.user.email %></td>
                  <td><%= review.review_state %></td>
                  <td><%= review.review_completion_date %></td>
              </tr>
            <% end %>
          </table>

      <p>Ingest Script Score:</p>
      <%= link_to "Start or Continue Review on This Record", collection_record_review_path(concept_id: @concept_id, revision_id: record.version_id) %> 
    </td>
  </tr>

</table>
<% end %>

<br>

<% if current_user && current_user.curator%>
  <%= link_to "Return to Curation Home Page", curation_home_path %>
<% end %>