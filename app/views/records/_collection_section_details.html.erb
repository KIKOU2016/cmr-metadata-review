<article class="section_display flex_item">
  <button class="section_button" onclick="location.href='<%= review_path(id: params["id"], section_index: 0) %>';">
  <%= title %>
  <!-- arrow to review section -->
  <div class="eui-icon eui-fa-arrow-circle-right"></div>
  </button>
  <!-- dynamically add bubble divs -->
  <div class="record_bubbles">
    <% bubble_data.each_with_index do | bubble, index | %>
      <% script_class = bubble[:script] ? "script" : "no_script" %>
      <% script_text_class = bubble[:script] ? "script_text" : "no_script_text" %>

      <div class="bubble flag_<%= bubble[:color] %> <%= script_class %>" title="<%= bubble[:field_name] %>">
        <% if bubble[:opinion] %>
          <div class="<%= script_text_class %> bubble_opinion">2</div>
          <% else %>
          <div style="visibility: hidden;" class="<%= script_text_class %> bubble_opinion">2</div>
        <% end %>
      </div>
    <% end %>
  </div>
</article>  

